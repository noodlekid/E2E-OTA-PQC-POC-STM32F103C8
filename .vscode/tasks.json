{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cmake --build build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build the project using CMake and Ninja."
        },
        {
            "label": "Configure",
            "type": "shell",
            "command": "cmake -B build -S . -G Ninja",
            "detail": "Run CMake configuration."
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "cmake --build build --target clean",
            "detail": "Clean the build directory."
        }
    ]
}